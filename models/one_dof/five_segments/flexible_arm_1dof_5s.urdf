      <geometry>
        <box size="0.05 0.025 0.01"/>
      </geometry>
      <origin rpy="0 0 0" xyz ="0.025 0 0"/>
    </visual>
    <inertial>
      <origin xyz="0.025 0 0" rpy="0 0 0"/>
      <mass value="0.03935" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="8.197916666666668e-06" />
    </inertial>
  </link>

  <joint name="active_joint" type="revolute">
