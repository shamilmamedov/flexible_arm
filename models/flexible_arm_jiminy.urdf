      <mass value="0.8" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0.002" />
    </inertial>
  </link>

  <joint name="link1_to_link2" type="fixed">
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0.1 0 0" rpy="0 0 0"/>
    <limit effort="100.0" lower="0.0" upper="1.0" velocity="0.5"/>
  </joint>

  <link name="link3">
