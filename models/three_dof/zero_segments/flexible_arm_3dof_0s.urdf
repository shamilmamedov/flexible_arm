<?xml version="1.0"?>
<robot name="flexible_arm">
    <!-- All the links in this model are assumed to be rigid. The model is mainly used
    for solving inverse kinematics at velocity level -->
    <!-- world -->
    <link name="world"/>

    <!-- First link is a rigid link -->
    <link name="link1">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.15"/>
            </geometry>
            <origin rpy="0 0 0" xyz ="0 0 0.075"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0.12" rpy="0 0 0"/>
            <mass value="2" />
            <inertia ixx="0.0061" ixy="0.0" ixz="0.0" iyy="0.0061" iyz="0.0" izz="0.01125"/>
        </inertial>
    </link>

    <joint name="active_joint1" type="revolute">
        <parent link="world"/>
        <child link="link1"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    <!-- Second link -->
    <link name="virtual_link2_1">
        <visual>
            <geometry>
                <box size="0.5 0.025 0.01"/>
            </geometry>
            <origin rpy="0 0 0" xyz ="0.25 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
            <mass value="0.3935" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="8.19791667e-05" />
        </inertial>
    </link>

    <joint name="active_joint2" type="revolute">
        <parent link="link1"/>
        <child link="virtual_link2_1"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0.15" rpy="1.57 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    <!-- Third link -->
    <link name="virtual_link3_1">
        <visual>
            <geometry>
                <box size="0.5 0.025 0.01"/>
            </geometry>
            <origin rpy="0 0 0" xyz ="0.25 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
            <mass value="0.3935" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="8.19791667e-05" />
        </inertial>
    </link>

    <joint name="active_joint3" type="revolute">
        <parent link="virtual_link2_1"/>
        <child link="virtual_link3_1"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    
    <!-- Load  -->
    <link name="load">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz ="0.05 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.025 0 0" rpy="0 0 0"/>
            <mass value="0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
  </link>

    <joint name="last_link_to_load" type="fixed">
        <parent link="virtual_link3_1"/>
        <child link="load"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
    </joint>
</robot>
