            <inertia ixx="2.05275833e-05" ixy="0" ixz="0" iyy="1.48587240e-04" iyz="0" izz="1.28125240e-04" />
        </inertial>
    </link>

    <joint name="active_joint2" type="revolute">
        <parent link="link1"/>
        <child link="virtual_link2_1"/>
