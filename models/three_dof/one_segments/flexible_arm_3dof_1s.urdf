<?xml version="1.0"?>
<robot name="flexible_arm">
    <!-- world -->
    <link name="world"/>

    <material name="link_material">
        <!-- <color rgba="0.6 0.6 0.6 1.0"/> -->
        <color rgba="0.059 0.059 0.055 0.851"/>
    </material>

    <material name="wall_material">
        <!-- <color rgba="0.95 0.95 0.95 1.0"/> -->
        <color rgba="0.6 0.16 0.11 1.0"/>
    </material>

    <!-- First link is a rigid link -->
    <link name="link1">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.15"/>
            </geometry>
            <material name="link_material"/>
            <origin rpy="0 0 0" xyz ="0 0 0.075"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0.12" rpy="0 0 0"/>
            <mass value="2" />
            <inertia ixx="0.0061" ixy="0.0" ixz="0.0" iyy="0.0061" iyz="0.0" izz="0.01125"/>
        </inertial>
    </link>

    <joint name="active_joint1" type="revolute">
        <parent link="world"/>
        <child link="link1"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    <!-- flexible arm modeled using virtual link method -->
    <!-- Second link -->
    <link name="virtual_link2_1">
        <visual>
            <geometry>
                <box size="0.25 0.002 0.05"/>
            </geometry>
            <material name="link_material"/>
            <origin rpy="0 0 0" xyz ="0.125 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.125 0 0" rpy="0 0 0"/>
            <mass value="0.19675" />
            <inertia ixx="4.10551667e-05" ixy="0" ixz="0" iyy="1.06572917e-03" iyz="0" izz="1.02480517e-03" />
        </inertial>
    </link>

    <joint name="active_joint2" type="revolute">
        <parent link="link1"/>
        <child link="virtual_link2_1"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0.15" rpy="1.57 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    <link name="virtual_link2_2">
        <visual>
            <geometry>
                <box size="0.25 0.002 0.05"/>
            </geometry>
            <material name="link_material"/>
            <origin rpy="0 0 0" xyz ="0.125 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.125 0 0" rpy="0 0 0"/>
            <mass value="0.19675" />
            <inertia ixx="4.10551667e-05" ixy="0" ixz="0" iyy="1.06572917e-03" iyz="0" izz="1.02480517e-03" />
        </inertial>
    </link>

    <joint name="passive_joint1" type="revolute">
        <parent link="virtual_link2_1"/>
        <child link="virtual_link2_2"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.25 0 0" rpy="0 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    
    <!--  -->
    <!-- Third link -->
    <link name="virtual_link3_1">
        <visual>
            <geometry>
                <box size="0.25 0.002 0.05"/>
            </geometry>
            <material name="link_material"/>
            <origin rpy="0 0 0" xyz ="0.125 0 0"/>
        </visual>
         <inertial>
            <origin xyz="0.125 0 0" rpy="0 0 0"/>
            <mass value="0.19675" />
            <inertia ixx="4.10551667e-05" ixy="0" ixz="0" iyy="1.06572917e-03" iyz="0" izz="1.02480517e-03" />
        </inertial>
    </link>

    <joint name="active_joint3" type="revolute">
        <parent link="virtual_link2_2"/>
        <child link="virtual_link3_1"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.25 0 0" rpy="0 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>

    <link name="virtual_link3_2">
        <visual>
            <geometry>
                <box size="0.25 0.002 0.05"/>
            </geometry>
            <material name="link_material"/>
            <origin rpy="0 0 0" xyz ="0.125 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.125 0 0" rpy="0 0 0"/>
            <mass value="0.19675" />
            <inertia ixx="4.10551667e-05" ixy="0" ixz="0" iyy="1.06572917e-03" iyz="0" izz="1.02480517e-03" />
        </inertial>
    </link>

    <joint name="passive_joint3_1" type="revolute">
        <parent link="virtual_link3_1"/>
        <child link="virtual_link3_2"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.25 0 0" rpy="0 0 0"/>
        <limit effort="100.0" lower="-3.14159" upper="3.14159" velocity="3.14"/>
    </joint>
   
    <link name="load">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="link_material"/>
            <origin rpy="0 0 0" xyz ="0 0 0"/>
        </visual>
        <inertial>
            <origin xyz="0.025 0 0" rpy="0 0 0"/>
            <mass value="0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
  </link>

    <joint name="last_link_to_load" type="fixed">
        <parent link="virtual_link3_2"/>
        <child link="load"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.25 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Wall -->
    <!-- distance from origin to wall = -0.1 -->
    <!-- wall width = 2 -->
    <!-- wall height = 1 -->
    <!-- wall thickness = 0.075 -->
    <link name = "wall_link">
        <visual>
            <origin xyz="0 -0.0375 0.5" rpy="0 0 0" />
            <geometry>
                <box size="2 0.075 1"/>
            </geometry>
            <material name = "wall_material"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.075 2 1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="15" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <joint name = "world_to_wall" type = "fixed">
        <parent link = "world" />
        <child link = "wall_link" />
        <origin xyz = "0 -0.15 0" />
    </joint>
    
</robot>
